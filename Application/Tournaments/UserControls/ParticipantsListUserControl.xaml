<UserControl x:Class="Tournaments.UserControls.ParticipantsListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tournaments"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <StackPanel>
        <Border Width="110" Height="160"  BorderBrush="Transparent">
            <Border.Background>
                <ImageBrush ImageSource="{Binding Image}" />
            </Border.Background>
        </Border>
        <TextBlock Text="{Binding Name}" Foreground="Gray" FontWeight="Heavy" />
    </StackPanel>
    
</UserControl>
